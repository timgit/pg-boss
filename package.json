{
	"name": "pg-boss",
	"version": "11.0.1",
	"description": "Queueing jobs in Postgres from Node.js like a boss",
	"type": "module",
	"types": "./types.d.ts",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"exports": {
		"types": "./types.d.ts",
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"cron-parser": "^4.9.0",
		"pg": "^8.16.3",
		"serialize-error": "^8.1.0"
	},
	"devDependencies": {
		"@types/luxon": "^3.7.1",
		"@types/node": "^22.18.6",
		"@types/pg": "^8.15.5",
		"luxon": "^3.7.2",
		"mocha": "^10.8.2",
		"nyc": "^17.1.0",
		"ts-standard": "^12.0.2",
		"tsup": "^8.5.0",
		"typescript": "^5.1.3"
	},
	"scripts": {
		"build": "tsup src/index.js --treeshake --sourcemap --format esm,cjs --out-dir dist --clean",
		"test": "npm run lint:fix && mocha",
		"cover": "nyc npm test",
		"tsc": "tsc --noEmit types.d.ts",
		"readme": "node ./examples/readme.js",
		"db:migrate": "node -e 'await import(\"./dist/index.js\").then(p => p.default.getMigrationPlans())'",
		"db:construct": "node -e 'await import(\"./dist/index.js\").then(p => p.default.getConstructionPlans())'",
		"lint:fix": "ts-standard --fix",
		"prepublishOnly": "npm run build && npm run tsc && npm run readme"
	},
	"mocha": {
		"timeout": 10000,
		"slow": 10000,
		"bail": true,
		"parallel": true,
		"require": "./test/hooks"
	},
	"nyc": {
		"include": [
			"src/**/*.js"
		],
		"sourceMap": false,
		"instrument": true,
		"reporter": [
			"lcov",
			"text-summary",
			"text"
		]
	},
	"ts-standard": {
		"globals": [
			"describe",
			"it",
			"before",
			"after",
			"before",
			"beforeEach",
			"afterEach"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/timgit/pg-boss.git"
	},
	"keywords": [
		"postgresql",
		"postgres",
		"queue",
		"job"
	],
	"author": "timgit",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/timgit/pg-boss/issues"
	},
	"homepage": "https://github.com/timgit/pg-boss#readme"
}