{
  "name": "pg-boss",
  "version": "11.1.1",
  "description": "Queueing jobs in Postgres from Node.js like a boss",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "cron-parser": "^5.4.0",
    "pg": "^8.16.3",
    "serialize-error": "^12.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.12",
    "@types/pg": "^8.15.5",
    "eslint": "^9.38.0",
    "luxon": "^3.7.2",
    "mocha": "^11.7.4",
    "neostandard": "^0.12.2",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "tsdown",
    "test": "eslint . && mocha",
    "cover": "nyc npm test",
    "tsc": "tsc --noEmit",
    "readme": "node ./test/readme.js",
    "db:migrate": "node --import=tsx -e 'console.log(require(\"./src\").getMigrationPlans())'",
    "db:construct": "node --import=tsx -e 'console.log(require(\"./src\").getConstructionPlans())'"
  },
  "mocha": {
    "timeout": 10000,
    "slow": 10000,
    "bail": true,
    "parallel": true,
    "require": [
      "./test/hooks.js"
    ],
    "node-option": [
      "import=tsx"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts"
    ],
    "sourceMap": true,
    "instrument": true,
    "reporter": [
      "lcov",
      "text-summary",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timgit/pg-boss.git"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "queue",
    "job"
  ],
  "author": "timgit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timgit/pg-boss/issues"
  },
  "homepage": "https://timgit.github.io/pg-boss",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "version.json"
  ]
}
